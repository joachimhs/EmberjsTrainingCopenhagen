

<div class="row">
    <div class="col-md-4">
        <h1>Buckets</h1>

        {{#if showCreateBucket}}
            {{input type="text" value=controller.newBucketName}}
            <button class="btn btn-primary" {{action "saveBucket"}}>Create</button>
            <button class="btn btn-default" {{action "cancelBucket"}}>Cancel</button>
        {{else}}
            <button class="btn btn-default form-control" style="margin-bottom: 15px;" {{action "createBucket"}}>
                Create Bucket
            </button>
        {{/if}}



        <div class="list-group">
            {{#each bucket in controller}}
                {{#link-to "bucket" bucket class="list-group-item" tagName="a"}}
                    {{bucket.id}}
                    <span class="glyphicon glyphicon-chevron-right pull-right"></span>
                {{/link-to}}

            {{/each}}
        </div>
    </div>

    <div class="col-md-8">
        {{outlet}}
    </div>


</div>